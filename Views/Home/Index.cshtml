@{
    ViewData ["Title"] = "Home - Secondary School Portal";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles {
    <link href="~/css/landing.css" rel="stylesheet" />
}

<header class="header">
    <div class="header-container">
        <div class="logo-section">
            <img src="~/logo/sobrex.jpg" alt="Sobrex Logo" class="school-logo" />
            <div class="school-info">
                <h1 class="school-name">Muslim Community Academy</h1>
                <p class="school-tagline">Knowledge For Positive Progress</p>
            </div>
        </div>
        <nav class="main-nav">
            <a href="#about" class="nav-link">About</a>
            <a href="#portal" class="nav-link">Portal</a>
            <a href="#contact" class="nav-link">Contact</a>
            @Html.ActionLink("Login", "Login", "Account", null, new { @class = "btn-login" })
        </nav>
    </div>
</header>


<section class="hero">
    <div class="hero-content">
        <h1 class="hero-title">Welcome to Muslim Community Academy</h1>
        <p class="hero-description">A premier institution dedicated to academic excellence, character development, and
            holistic education for over 25 years.</p>
        <div class="hero-buttons">
            <a href="#portal" class="btn btn-primary">Explore Portal</a>
            <a href="#about" class="btn btn-secondary">Learn More</a>
        </div>
    </div>
</section>

<section id="about" class="about-section">
    <div class="container">
        <h2 class="section-title">About Our School</h2>
        <div class="about-content">
            <div class="about-text">
                <h3>Our Mission</h3>
                <p>To provide quality education that empowers students with knowledge, skills, and values necessary to
                    become responsible citizens and future leaders in our global society.</p>

                <h3>Our Vision</h3>
                <p>To be a leading secondary school that nurtures academic excellence, character development, and
                    innovative thinking in a supportive and inclusive learning environment.</p>

                <h3>Core Values</h3>
                <ul class="values-list">
                    <li><strong>Excellence:</strong> We strive for the highest standards in all we do</li>
                    <li><strong>Integrity:</strong> We uphold honesty and strong moral principles</li>
                    <li><strong>Innovation:</strong> We embrace creativity and forward thinking</li>
                    <li><strong>Respect:</strong> We value diversity and treat everyone with dignity</li>
                    <li><strong>Community:</strong> We foster collaboration and unity</li>
                </ul>
            </div>
            <div class="about-stats">
                <div class="stat-card">
                    <div class="stat-number">1500+</div>
                    <div class="stat-label">Students</div>
                </div>
                <div class="stat-card">
                    <div class="stat-number">120+</div>
                    <div class="stat-label">Staff Members</div>
                </div>
                <div class="stat-card">
                    <div class="stat-number">25+</div>
                    <div class="stat-label">Years of Excellence</div>
                </div>
                <div class="stat-card">
                    <div class="stat-number">98%</div>
                    <div class="stat-label">Success Rate</div>
                </div>
            </div>
        </div>
    </div>
</section>

<section id="portal" class="portal-section">
    <div class="container">
        <h2 class="section-title">About Our School Portal</h2>
        <p class="section-subtitle">A comprehensive digital platform connecting students, parents, and staff</p>

        <div class="portal-features">
            <div class="portal-feature">
                <div class="feature-icon"><img src="~/logo/sobrex.jpg" alt="Sobrex Logo" /></div>
                <h3>For Students</h3>
                <p>Access your courses, view grades, submit assignments, check attendance records, and communicate with
                    teachers all in one place.</p>
            </div>

            <div class="portal-feature">
                <div class="feature-icon"><img src="~/logo/sobrex.jpg" alt="Sobrex Logo" /></div>
                <h3>For Parents</h3>
                <p>Monitor your child's academic progress, view attendance, receive important announcements, and stay
                    connected with the school community.</p>
            </div>

            <div class="portal-feature">
                <div class="feature-icon"><img src="~/logo/logo2.png" alt="Logo 2" /></div>
                <h3>For Staff</h3>
                <p>Manage classes, record grades, track student performance, share resources, and streamline
                    administrative tasks efficiently.</p>
            </div>
        </div>

        <div class="portal-info-box">
            <h3>Portal Features</h3>
            <div class="features-grid">
                <div class="feature-item">✓ Real-time Grade Access</div>
                <div class="feature-item">✓ Digital Assignment Submission</div>
                <div class="feature-item">✓ Attendance Tracking</div>
                <div class="feature-item">✓ School Calendar & Events</div>
                <div class="feature-item">✓ Library Resources</div>
                <div class="feature-item">✓ Announcement System</div>
                <div class="feature-item">✓ Report Card Generation</div>
                <div class="feature-item">✓ Secure Communication</div>
            </div>
        </div>

        <div class="portal-cta">
            <h3>Ready to Get Started?</h3>
            <p>Access the portal to explore all features and stay connected with our school community.</p>
            @Html.ActionLink("Access Portal", "Login", "Account", null, new { @class = "btn btn-primary-large" })
        </div>
    </div>
</section>

<section id="contact" class="contact-section">
    <div class="container">
        <h2 class="section-title">Contact Us</h2>
        <div class="contact-info">
            <div class="contact-item">
                <div class="contact-icon">📍</div>
                <h4>Address</h4>
                <p>K/M 4, Along Ibadan/Ilorin New Expressway, Olode Idi-Ose, Moniya Ibadan <br> Ibadan City,  Oyo State 12345</p>
            </div>
            <div class="contact-item">
                <div class="contact-icon">📞</div>
                <h4>Phone</h4>
                <p>+234 (0) 81 302 7073<br>+234 (0) 81 302 7074</p>
            </div>
            <div class="contact-item">
                <div class="contact-icon">✉️</div>
                <h4>Email</h4>
                <p>info@M.C.A.edu<br>admissions@muslimcommunityacademy.edu</p>
            </div>
            <div class="contact-item">
                <div class="contact-icon">⏰</div>
                <h4>School Hours</h4>
                <p>Monday - Friday: 7:30 AM - 3:30 PM<br>Saturday: 8:00 AM - 12:00 PM</p>
            </div>
        </div>
    </div>
</section>

<footer class="footer">
    <div class="footer-container">
        <div class="footer-section">
            <img src="~/logo/sobrex.jpg" alt="Sobrex Logo" class="footer-logo" />
            <h3>Excellence Secondary School</h3>
            <p>Building Future Leaders Through Quality Education</p>
        </div>

        <div class="footer-section">
            <h4>Quick Links</h4>
            <ul class="footer-links">
